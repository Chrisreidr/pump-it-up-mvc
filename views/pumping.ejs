<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pump it up</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fascinate&family=Fascinate+Inline&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1 class="title">Pump it up</h1>
        <div class="display-containers">
            <div class="amount-eaten-today">
                <h2 class="display-container-labels">fl oz Eaten Today</h2>
                    <div class="center">
                        <div class="display-amount-container">
                            <span class="display-floz-amount">0 fl oz</span>
                        </div>
                    </div>
                </div>
                <!-- HERE IS THE PROBLEM -->
                <!-- floz update form -->
            <div class="amount-stored">
                <h2 class="display-container-labels">Total fl oz Stored</h2>
                <div class="center">
                    <div class="display-amount-container"><span class="display-floz-amount">0 fl oz</span></div>
                </div>
            </div>
        </div>
        <form action="/pumping/totalFloz/<% pumping.id %>?_method=PUT"
          method="POST" id="totalFlozStored">
          <button type="submit" class="updateBtn">Update</button>
        </form>
        <!--  -->
        <section class="milk-amount-containers">
            <form action="/pumping/createLog" method="POST">
                <div class="baby-ate">
                    <h2 class="container-labels baby-just-ate">Fl oz Baby Just Ate</h2>
                    <div class="center">
                        <div class="baby-ate-container container-amounts"><input type="number" name="flozFed" value="0" placeholder="Input fl oz..." class="floz-amount ate-floz-amount"></input>
                        <span class="atSpan">at</span>
                        <input type="time" name="timeFed" value="null" placeholder="Input time..." class="floz-amount time-floz-amount"></input></div>
                    </div>
                    <div class="amount-pumped">
                        <h2 class="container-labels">Fl oz You Just Stored</h2>
                        <div class="center">
                            <div class="amount-pumped-container container-amounts"><input type="number" name="flozStored" placeholder="Input fl oz..." value="0" class="floz-amount"></input></div>
                        </div>
                    </div>
                    <br>
                    <button type="submit" class="submit-btn">Submit</button>
                </div>
            </form>
        </section>
        <section class="middle-container">
            <h1 class="title-feeding-schedule">Today's Feeding Schedule</h1>
            <span class="display-date"></span>
            <div class="clock">
                <div class="clock-face">
                  <div class="hand hour-hand"></div>
                  <div class="hand minute-hand"></div>
                  <div class="hand second-hand"></div>
                </div>
              </div>
            <hr>
            <section class="daily-logs">
                <ul class="no-style">
                    <% pumpings.forEach( el => { %>
                    <div class="time-ate-container">
                        <li>
                            <div class="ate-today-log">
                                <h2 class="display-log-titles">Baby Ate</h2>
                                <div class="display-time-border">
                                    <span class="display-feeding-log"><%= el.flozFed %> floz</span>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="time-today-log">
                                <h2 class="display-log-titles">Time</h2>
                                <div class="display-time-border">
                                    <span class="display-time-log"><%= el.timeFed %></span>
                                </div>
                            </div>
                        </li>
                    </div>
                    <form
                    action="/pumping/deleteLog/<%= el.id %>?_method=DELETE"
                    method="POST"
                    class="">
                        <button class="delete-btn" type="submit">Delete</button>
                    </form>
                    <% }) %>
                </ul>
            </section>
    <a href="/logout">Logout</a>

    <script src="js/main.js"></script>
</body>
</html>